---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import PostCard from '../components/PostCard.astro';

const allPosts = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const featuredPost = allPosts[0];
const otherPosts = allPosts.slice(1);
---

<BaseLayout title="Blog Discursivas | Alta Performance">
    <Header slot="header" />

    <section class="relative py-12 md:py-20">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            
            <div class="text-left">
                <div class="inline-flex items-center gap-2 px-4 py-1 mb-6 border border-green-500/50 bg-green-500/10 rounded text-green-400 text-xs font-bold uppercase tracking-widest shadow-[0_0_15px_rgba(37,211,102,0.2)]">
                    <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
                    Novos Artigos Disponíveis
                </div>
                
                <h1 class="font-display text-5xl md:text-6xl font-black text-white leading-[1.1] mb-6">
                    DOMINE AS <br>
                    <span class="text-brand-orange">DISCURSIVAS.</span>
                </h1>
                
                <p class="font-body text-brand-gray text-lg max-w-lg mb-8 leading-relaxed">
                    Artigos técnicos, análises de bancas e estratégias de aprovação para Medicina nas universidades mais concorridas do país.
                </p>

                <a href="#posts" class="inline-flex items-center justify-center px-8 py-4 bg-brand-orange text-brand-black font-extrabold uppercase tracking-widest rounded text-lg hover:bg-white hover:text-brand-orange transition-all shadow-glow-orange hover:shadow-[0_0_50px_#E07720]">
                    Explorar Conteúdo
                </a>
            </div>

            {featuredPost && (
                <div class="relative group">
                    <div class="absolute -inset-1 bg-gradient-to-r from-brand-orange to-brand-purple rounded-xl blur opacity-30 group-hover:opacity-60 transition duration-500"></div>
                    <div class="relative bg-brand-black border border-white/10 rounded-xl overflow-hidden aspect-video shadow-2xl">
                         {featuredPost.data.image ? (
                            <img src={featuredPost.data.image} class="w-full h-full object-cover opacity-80 group-hover:scale-105 transition duration-700" />
                         ) : (
                            <div class="w-full h-full bg-brand-card flex items-center justify-center"><span class="text-brand-gray">Destaque</span></div>
                         )}
                         <div class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent flex flex-col justify-end p-8">
                            <span class="text-brand-orange font-bold uppercase tracking-wider text-sm mb-2">Destaque da Semana</span>
                            <a href={`/blog/${featuredPost.slug}/`} class="font-display text-2xl md:text-3xl font-bold text-white hover:text-brand-orange transition-colors">
                                {featuredPost.data.title}
                            </a>
                         </div>
                    </div>
                </div>
            )}
        </div>
    </section>

    <section id="posts" class="py-20 border-t border-white/5">
        <div class="text-center mb-16">
            <h2 class="font-display text-3xl font-bold text-white uppercase tracking-wide">
                Últimas <span class="text-brand-orange">Publicações</span>
            </h2>
            <div class="w-24 h-1 bg-brand-purple mx-auto mt-4 rounded-full"></div>
        </div>

        <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
            {otherPosts.map((post) => (
                <PostCard post={post} />
            ))}
        </div>
    </section>
</BaseLayout>