---
// src/layouts/BaseLayout.astro
import SEO from '../components/SEO.astro';

interface Props {
	title: string;
	description?: string;
    image?: string;
    article?: boolean;
}

const { 
    title, 
    description = "Blog especializado em Discursivas e Alta Performance", // Descrição padrão se não houver
    image,
    article = false
} = Astro.props;
---

<!doctype html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        
        <SEO 
            title={title}
            description={description}
            image={image}
            article={article}
        />
        
		<slot name="head" />
	</head>
	<body class="bg-gray-50 text-gray-900 antialiased font-sans flex flex-col min-h-screen">
		<main class="flex-grow w-full max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			<slot />
		</main>
	</body>
</html>