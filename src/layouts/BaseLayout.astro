---
// src/layouts/BaseLayout.astro
import SEO from '../components/SEO.astro';

interface Props {
	title: string;
	description?: string;
    image?: string;
    article?: boolean;
}

const { 
    title, 
    description = "Discursivas: Onde médicos começam.",
    image,
    article = false
} = Astro.props;
---

<!doctype html>
<html lang="pt-br" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&family=Patrick+Hand&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100&display=swap" rel="stylesheet">

        <SEO 
            title={title}
            description={description}
            image={image}
            article={article}
        />
		<slot name="head" />
	</head>
	
    <body class="bg-brand-dark text-brand-sand antialiased font-sans flex flex-col min-h-screen selection:bg-brand-orange selection:text-white">
		
        <slot name="header" />

		<main class="flex-grow w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			<slot />
		</main>

        <slot name="footer" />
	</body>
</html>