---
// src/components/Header.astro
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Artigos', href: '/blog' }, // Vamos criar essa rota de listagem depois
  { name: 'Sobre', href: '/sobre' },
];
---

<header class="sticky top-0 z-50 w-full border-b border-white/10 bg-brand-dark/80 backdrop-blur-md">
  <div class="mx-auto flex h-20 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
    
    <a href="/" class="flex items-center gap-2 group">
      <div class="h-8 w-8 rounded-tr-xl rounded-bl-xl bg-gradient-to-tr from-brand-orange to-brand-lilac"></div>
      <span class="font-display text-2xl font-bold text-white tracking-wide group-hover:text-brand-orange transition-colors">
        Discursivas<span class="text-brand-orange">.</span>
      </span>
    </a>

    <nav class="hidden md:flex gap-8">
      {navItems.map((item) => (
        <a 
          href={item.href} 
          class="text-sm font-medium text-gray-300 hover:text-brand-orange transition-colors"
        >
          {item.name}
        </a>
      ))}
    </nav>

    <div class="hidden md:flex items-center gap-4">
       <button class="text-gray-400 hover:text-white">
         <span class="sr-only">Buscar</span>
         <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
         </svg>          
       </button>
       
       <a href="https://discursivas.com" target="_blank" class="rounded-full bg-brand-orange px-5 py-2.5 text-sm font-bold text-white shadow-lg shadow-brand-orange/20 hover:bg-white hover:text-brand-orange transition-all duration-300 transform hover:-translate-y-0.5">
         √Årea do Aluno
       </a>
    </div>
  </div>
</header>