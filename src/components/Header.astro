---
// src/components/Header.astro
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Artigos', href: '/' }, // Link ancora ou pagina
  { name: 'Plataforma', href: 'https://app.discursivas.com' },
];
---

<header class="sticky top-0 z-50 w-full border-b border-brand-orange/30 bg-brand-black/90 backdrop-blur-md shadow-lg shadow-brand-orange/5">
  <div class="mx-auto flex h-20 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
    
    <a href="/" class="flex items-center gap-2 group">
      <span class="font-display text-2xl font-black text-white tracking-wider uppercase">
        BlackMed<span class="text-brand-orange">.</span>
      </span>
    </a>

    <nav class="hidden md:flex gap-8 items-center">
      {navItems.map((item) => (
        <a 
          href={item.href} 
          class="text-sm font-bold uppercase tracking-widest text-brand-gray hover:text-white transition-colors"
        >
          {item.name}
        </a>
      ))}
      
      <a href="https://verificador.discursivas.com" class="ml-4 px-6 py-2 bg-brand-orange text-brand-black font-extrabold uppercase tracking-wider rounded border border-brand-orange shadow-glow-orange hover:bg-white hover:text-brand-orange transition-all duration-300 transform hover:scale-105">
        Matricule-se
      </a>
    </nav>
  </div>
</header>