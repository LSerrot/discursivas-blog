---
// src/components/PostCard.astro
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;

// Formatar data para padr√£o brasileiro
const formattedDate = post.data.pubDate.toLocaleDateString('pt-BR', {
  day: 'numeric',
  month: 'long',
  year: 'numeric',
});
---

<article class="group relative flex flex-col items-start">
  <div class="h-48 w-full overflow-hidden rounded-lg bg-gray-100 group-hover:opacity-75 sm:h-60 transition-opacity">
    {post.data.image ? (
      <img 
        src={post.data.image} 
        alt={post.data.title} 
        class="h-full w-full object-cover object-center"
        loading="lazy" 
      />
    ) : (
      <div class="flex h-full items-center justify-center bg-gray-200 text-gray-400">
        <span class="text-sm">Sem imagem</span>
      </div>
    )}
  </div>
  
  <div class="mt-4 flex items-center gap-x-4 text-xs">
    <time datetime={post.data.pubDate.toISOString()} class="text-gray-500">
      {formattedDate}
    </time>
    {post.data.tags.map((tag) => (
      <span class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">
        {tag}
      </span>
    ))}
  </div>
  
  <div class="group relative">
    <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-blue-600">
      <a href={`/blog/${post.slug}/`}>
        <span class="absolute inset-0"></span>
        {post.data.title}
      </a>
    </h3>
    <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600">
      {post.data.description}
    </p>
  </div>
</article>